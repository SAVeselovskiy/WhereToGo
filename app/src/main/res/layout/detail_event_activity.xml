<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detail_event_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/detail_event_icon"
        android:layout_toEndOf="@+id/detail_event_icon"
        android:paddingRight="20dp"
        android:paddingLeft="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:textColor="#000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_favorites_button"
        android:layout_below="@+id/detail_event_name"
        android:layout_toRightOf="@+id/detail_event_icon"
        android:paddingRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:text="add favorite" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invite_button"
        android:layout_below="@+id/add_favorites_button"
        android:layout_toRightOf="@+id/detail_event_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingRight="25dp"
        android:text="invite" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/detail_event_icon"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/detail_event_description"
        android:layout_below="@+id/invite_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>

</RelativeLayout>